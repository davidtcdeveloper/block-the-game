root = true

[*.{kt,kts}]
indent_style = space
indent_size = 4
max_line_length = 120
insert_final_newline = true
charset = utf-8
end_of_line = lf

ktlint_code_style = ktlint_official
# Ignore function-naming rule for Jetpack Compose functions and previews
ktlint_standard_function-naming_ignore_when_annotated_with = Composable,Preview
# Backward-compat key used by older ktlint versions (harmless if unknown)
ktlint_function_naming_ignore_when_annotated_with = Composable,Preview
